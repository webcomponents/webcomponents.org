{
  "name": "@webcomponents/internal-site",
  "private": true,
  "version": "2.0.0",
  "description": "A new implementation of the webcompoents.org site",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "test": "wireit",
    "build:dev": "wireit",
    "build:prod": "wireit",
    "serve:dev": "wireit",
    "serve:prod": "wireit",
    "watch:dev": "npm run build:dev && (npm run serve:dev > /dev/null 2>&1 & WIREIT_FAILURES=continue npm run build-and-check:dev --watch)",
    "watch:prod": "npm run build:prod && (npm run serve:prod & WIREIT_FAILURES=continue npm run build-and-check:prod --watch)",
    "check": "wireit",
    "check:lint": "wireit",
    "build-and-check:dev": "wireit",
    "build-and-check:prod": "wireit",
    "format": "prettier \"./packages/*/src/**/*.ts\" --write",
    "check:format": "wireit"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@web/dev-server": "^0.1.34",
    "esbuild": "^0.15.9",
    "eslint": "^8.24.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "prettier": "^2.7.1",
    "typescript": "~4.8.2",
    "wireit": "^0.7.2"
  },
  "wireit": {
    "test": {
      "dependencies": [
        "./packages/custom-elements-manifest-tools:test"
      ]
    },
    "serve:prod": {
      "command": "node packages/site-server/lib/prod-server.js",
      "files": [],
      "output": [],
      "dependencies": [
        "./packages/site-server:build",
        "./packages/content:build:prod"
      ]
    },
    "serve:dev": {
      "command": "wds --root-dir=./packages/content/_dev --node-resolve --watch --open",
      "files": [],
      "output": [],
      "dependencies": [
        "build:dev"
      ]
    },
    "build:prod": {
      "dependencies": [
        "./packages/client:build:prod",
        "./packages/content:build:prod",
        "./packages/site-server:build"
      ]
    },
    "build:dev": {
      "dependencies": [
        "./packages/client:build:dev",
        "./packages/site-server:build"
      ]
    },
    "build-and-check:dev": {
      "dependencies": [
        "build:dev",
        "check"
      ]
    },
    "build-and-check:prod": {
      "dependencies": [
        "build:prod",
        "check"
      ]
    },
    "check": {
      "dependencies": [
        "./packages/client:check",
        "./packages/site-server:check",
        "check:lint",
        "check:format"
      ]
    },
    "check:lint": {
      "command": "eslint --color --cache --cache-location .eslintcache \"packages/{client,site-server}/src/**/*.ts\"",
      "files": [
        ".eslintrc.json",
        "packages/{client,server}/src/**/*.ts"
      ],
      "output": []
    },
    "check:format": {
      "command": "prettier \"./packages/{client,site-server}/src/**/*.ts\" --check --cache --cache-strategy=metadata",
      "files": [
        ".prettierrc.json",
        "packages/{client,site-server}/src/**/*.ts"
      ],
      "output": []
    }
  }
}
