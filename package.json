{
  "name": "webcomponents.org",
  "private": true,
  "version": "2.0.0",
  "description": "A new implementation of the webcompoents.org site",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "format": "prettier \"./packages/*/src/**/*.ts\" --write"
  },
  "dependencies": {
    "prettier": "^2.7.1",
    "typescript": "~4.8.2",
    "wireit": "^0.7.1"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "./packages/custom-elements-manifest-tools:build",
        "./packages/catalog-api:build",
        "./packages/catalog-server:build"
      ]
    },
    "test": {
      "dependencies": [
        "./packages/custom-elements-manifest-tools:test",
        "./packages/catalog-server:test"
      ]
    }
  }
}
