{
  "name": "webcomponents.org",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git"
  },
  "scripts": {
    "install": "pip install -t lib -r requirements.txt",
    "lint": "grunt lint",
    "client": "cd client && npm install && dev_appserver.py client.yaml"
  },
  "devDependencies": {
    "eslint": "^3.3.1",
    "eslint-config-google": "^0.5.0",
    "eslint-config-xo": "^0.15.3",
    "eslint-plugin-html": "^1.5.1",
    "grunt": "^1.0.1",
    "grunt-eslint": "^19.0.0",
    "grunt-pylint": "^1.3.1",
    "load-grunt-tasks": "^3.5.0",
    "web-component-tester": "^4.3.1"
  },
  "eslintConfig": {
    "extends": "google",
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "html"
    ],
    "globals": {
      "CustomElements": true,
      "HTMLImports": true,
      "Polymer": true,
      "grecaptcha": true
    },
    "rules": {
      "new-cap": 0,
      "max-len": 0,
      "no-warning-comments": 0,
      "curly": 0,
      "comma-dangle": 0,
      "eqeqeq": 0,
      "no-eq-null": 0,
      "require-jsdoc": 0
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  }
}
