{
  "name": "@webcomponents/internal-site",
  "private": true,
  "version": "2.0.0",
  "description": "A new implementation of the webcompoents.org site",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "test": "wireit",
    "build:dev": "wireit",
    "build:prod": "wireit",
    "serve:dev": "wireit",
    "serve:prod": "wireit",
    "watch:dev": "npm run build:dev && (npm run serve:dev & npm run build:dev --watch & npm run check --watch)",
    "watch:prod": "npm run build:prod && (npm run serve:prod & npm run build:prod --watch & npm run check --watch)",
    "check": "wireit",
    "format": "prettier \"./packages/*/src/**/*.ts\" --write"
  },
  "dependencies": {
    "@web/dev-server": "^0.1.34",
    "esbuild": "^0.15.9",
    "prettier": "^2.7.1",
    "typescript": "~4.8.2",
    "wireit": "^0.7.1"
  },
  "wireit": {
    "test": {
      "dependencies": [
        "./packages/custom-elements-manifest-tools:test"
      ]
    },
    "serve:prod": {
      "command": "wds --root-dir=./packages/content/_site --watch --open",
      "files": [],
      "output": [],
      "dependencies": [
        "./packages/content:build:prod"
      ]
    },
    "serve:dev": {
      "command": "wds --root-dir=./packages/content/_dev --node-resolve --watch --open",
      "files": [],
      "output": [],
      "dependencies": [
        "build:dev"
      ]
    },
    "build:prod": {
      "dependencies": [
        "./packages/client:build:prod",
        "./packages/content:build:prod"
      ]
    },
    "build:dev": {
      "dependencies": [
        "./packages/client:build:dev",
        "./packages/content:build:dev"
      ]
    },
    "check": {
      "dependencies": [
        "./packages/client:check:types"
      ]
    }
  }
}
