{
  "name": "@webcomponents/catalog-server",
  "version": "0.0.0",
  "private": true,
  "description": "A web component catalog database and server",
  "author": "Google LLC",
  "homepage": "",
  "license": "Apache-2.0",
  "type": "module",
  "main": "index.js",
  "files": [
    "lib",
    "index.{d.ts,d.ts.map,js,js.map}"
  ],
  "scripts": {
    "build": "wireit",
    "start": "wireit",
    "start:dev": "wireit",
    "test": "wireit",
    "test:manual": "wireit",
    "emulators:start": "wireit",
    "emulators:export": "wireit",
    "firebase": "firebase"
  },
  "wireit": {
    "build": {
      "command": "tsc --pretty",
      "dependencies": [
        "../custom-elements-manifest-tools:build",
        "../catalog-api:build"
      ],
      "files": [
        "tsconfig.json",
        "src/**/*.ts"
      ],
      "output": [
        "lib",
        "index.{js,js.map,d.ts,d.ts.map}",
        "tsconfig.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "start": {
      "command": "node --enable-source-maps index.js",
      "service": true,
      "dependencies": [
        "build"
      ]
    },
    "start:dev": {
      "command": "FIRESTORE_EMULATOR_HOST=localhost:7450 npm start",
      "service": true,
      "dependencies": [
        "build",
        "emulators:start"
      ]
    },
    "test": {
      "command": "NODE_OPTIONS=--enable-source-maps FIRESTORE_EMULATOR_HOST=localhost:7450 uvu test \"_test\\.js$\"",
      "dependencies": [
        "build",
        "emulators:start"
      ],
      "files": [],
      "output": []
    },
    "emulators:start": {
      "command": "firebase emulators:start --project wc-catalog --import firebase-data",
      "service": true,
      "files": [
        "firebase.json",
        "firestore.indexes.json",
        "firestore.rules"
      ],
      "env": {
        "IMPORT": {
          "external": true
        }
      }
    },
    "emulators:export": {
      "command": "firebase emulators:export --project wc-catalog -f firebase-data"
    },
    "test:manual": {
      "command": "NODE_OPTIONS='--enable-source-maps' FIRESTORE_EMULATOR_HOST=localhost:7450 uvu test \"_test\\.js$\"",
      "dependencies": [
        "build"
      ],
      "files": [],
      "output": []
    }
  },
  "devDependencies": {
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.8",
    "@types/node": "^18.0.6",
    "@types/source-map-support": "^0.5.3",
    "firebase-tools": "^11.3.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^6.0.0",
    "@js-temporal/polyfill": "^0.4.2",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@webcomponents/catalog-api": "0.0.0",
    "@webcomponents/custom-elements-manifest-tools": "0.0.0",
    "@webcomponents/internal-site-client": "0.0.0",
    "custom-elements-manifest": "^2.0.0",
    "firebase": "^9.6.10",
    "firebase-admin": "^11.0.0",
    "graphql-helix": "^1.13.0",
    "koa-bodyparser": "^4.3.0",
    "lit": "^2.6.0",
    "natural": "^6.1.2",
    "semver": "^7.3.7"
  }
}
