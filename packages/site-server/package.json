{
  "name": "@webcomponents/internal-site-server",
  "private": true,
  "version": "0.0.0",
  "description": "The server for webcomponents.org",
  "author": "Google LLC",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "check": "wireit",
    "serve:dev": "wireit"
  },
  "wireit": {
    "build": {
      "command": "find src -name \"*.ts\" | xargs esbuild --format=esm --target=es2022 --color --outdir=lib",
      "dependencies": [
        "../custom-elements-manifest-tools:build"
      ],
      "files": [
        "src/**/*.ts"
      ],
      "output": [
        "lib"
      ],
      "clean": "if-file-deleted"
    },
    "check": {
      "command": "tsc --pretty",
      "files": [
        "tsconfig.json",
        "../../tsconfig.base.json",
        "src/**/*.ts"
      ],
      "output": []
    },
    "serve:dev": {
      "command": "node --enable-source-maps ./dev-server.js",
      "dependencies": [
        "build"
      ]
    }
  },
  "dependencies": {
    "@apollo/client": "^3.7.0",
    "@types/koa": "^2.13.5",
    "@types/koa-conditional-get": "^2.0.0",
    "@types/koa-etag": "^3.0.0",
    "@types/koa-static": "^4.0.2",
    "@web/dev-server": "^0.1.34",
    "koa": "^2.13.4",
    "koa-conditional-get": "^3.0.0",
    "koa-etag": "^4.0.0",
    "koa-static": "^5.0.0"
  }
}
