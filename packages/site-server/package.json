{
  "name": "@webcomponents/internal-site-server",
  "private": true,
  "version": "0.0.0",
  "description": "The server for webcomponents.org",
  "author": "Google LLC",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:dev": "wireit",
    "build:prod": "wireit",
    "build:server": "wireit",
    "check": "wireit",
    "start:dev": "wireit",
    "start:prod": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:dev",
        "build:prod"
      ]
    },
    "build:dev": {
      "dependencies": [
        "build:server",
        "../site-content:build:dev"
      ]
    },
    "build:prod": {
      "dependencies": [
        "build:server",
        "../site-content:build:prod"
      ]
    },
    "build:server": {
      "command": "find src -name \"*.ts\" | xargs esbuild --format=esm --target=es2022 --color --outdir=lib",
      "dependencies": [
        "../site-client:build:dev",
        "../custom-elements-manifest-tools:build",
        "../site-content:build:templates"
      ],
      "files": [
        "src/**/*.ts"
      ],
      "output": [
        "lib"
      ],
      "clean": "if-file-deleted"
    },
    "check": {
      "command": "tsc --pretty",
      "files": [
        "tsconfig.json",
        "../../tsconfig.base.json",
        "src/**/*.ts"
      ],
      "output": [],
      "dependencies": [
        "../site-client:build:types",
        "../site-content:build:templates:types"
      ]
    },
    "start:dev": {
      "command": "node --enable-source-maps ./lib/dev-server.js",
      "service": true,
      "dependencies": [
        "build:dev"
      ]
    },
    "start:prod": {
      "command": "node --enable-source-maps ./lib/prod-server.js",
      "service": true,
      "dependencies": [
        "build:prod"
      ]
    }
  },
  "dependencies": {
    "@apollo/client": "^3.7.0",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@lit-labs/ssr": "^2.2.3",
    "@types/koa": "^2.13.5",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^12.0.0",
    "@types/koa-conditional-get": "^2.0.0",
    "@types/koa-etag": "^3.0.0",
    "@types/koa-static": "^4.0.2",
    "@web/dev-server": "^0.1.34",
    "google-auth-library": "^8.7.0",
    "koa": "^2.13.4",
    "koa-conditional-get": "^3.0.0",
    "koa-etag": "^4.0.0",
    "koa-static": "^5.0.0"
  }
}
